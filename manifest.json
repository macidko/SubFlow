{
  "manifest_version": 3,
  "name": "YouTube Subtitle Colorer",
  "version": "2.0.0",
  "description": "YouTube altyazıları için modern ve gelişmiş kelime renklendirici - Anti-glitch optimizasyonlu",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["storage.js", "content.js"],
      "css": ["styles_modern.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup_new.html",
    "default_title": "Subtitle Colorer",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}